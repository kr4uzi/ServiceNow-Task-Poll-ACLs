        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var userQuery = current.getEncodedQuery();
	var incTaskGr = new GlideRecordSecure('incident_task');
	incTaskGr.query(); // the query BR for incident_task will add necessary filters

	var cond = null;
	while (incTaskGr.next()) {
		if (cond) {
			cond.addOrCondition('sys_id', incTaskGr.incident);
		} else {
			cond = current.addQuery('sys_id', incTaskGr.incident);
		}
	}

	var incAssignment = gs.getProperty('tpoll_incident_assignment_condition');
	if (incAssignment) {
		var encodedQuery = cond ? 'NQ' : '';
		if (userQuery) {
			encodedQuery += userQuery + '^';
		}

		encodedQuery += incAssignment;
		current.addEncodedQuery(encodedQuery);
	}

	gs.info('MKR condition: ' + current.getEncodedQuery());

})(current, previous);]]></script>
